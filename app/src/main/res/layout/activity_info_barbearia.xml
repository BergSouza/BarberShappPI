<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InfoBarbeariaActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtViewNome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="BARBEARIA" />

        <TextView
            android:id="@+id/txtViewEndereco"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ENDEREÇO" />

        <TextView
            android:id="@+id/txtViewContato"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CONTATO" />

        <TextView
            android:id="@+id/txtViewHorario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="HORARIO FUNCIONAMENTO" />

        <TextView
            android:id="@+id/txtViewFormasPagamento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="FORMAS PAGAMENTO" />

        <Button
            android:id="@+id/button5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="entrarNaFila"
            android:text="Acessar Fila" />

        <TextView
            android:id="@+id/txtViewAvaliacoes"
            android:layout_width="match_parent"
            android:layout_height="484dp"
            android:text="AVALIAÇÕES:" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>