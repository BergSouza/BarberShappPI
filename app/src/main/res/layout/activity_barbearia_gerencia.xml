<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/edtTxtNomeBarbeiro"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".BarbeariaGerenciaActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnRemoveBarbearia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:enabled="false"
                android:onClick="removerBarbearia"
                android:text="Remover Barbearia"
                android:textSize="10sp"
                android:visibility="invisible" />

            <Button
                android:id="@+id/btnEditaBarbearia"
                android:layout_width="221dp"
                android:layout_height="wrap_content"
                android:enabled="false"
                android:text="Editar Dados"
                android:textSize="10sp"
                android:onClick="editarBarbearia"
                android:visibility="invisible" />
        </LinearLayout>

        <TextView
            android:id="@+id/txtViewNome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="BARBEARIA" />

        <TextView
            android:id="@+id/txtViewEndereco"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ENDEREÃ‡O" />

        <TextView
            android:id="@+id/txtViewContato"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CONTATO" />

        <TextView
            android:id="@+id/txtViewHorario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="HORARIO FUNCIONAMENTO" />

        <TextView
            android:id="@+id/txtViewFormasPagamento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="FORMAS PAGAMENTO" />

        <Button
            android:id="@+id/btnSairBarbearia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:enabled="false"
            android:onClick="sairBarbearia"
            android:text="Sair da Barbearia"
            android:visibility="invisible" />

        <Button
            android:id="@+id/btnTrabalhar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:enabled="false"
            android:onClick="trabalhar"
            android:text="Trabalhar"
            android:visibility="invisible" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/edtTxtNomeBarbeiro2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:enabled="false"
                android:inputType="textPersonName"
                android:visibility="invisible" />

            <Button
                android:id="@+id/btnAdicionarBarbeiro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:enabled="false"
                android:hint="Digite um email de Barbeiro"
                android:onClick="adicionarBarbeiro"
                android:text="Adicionar Barbeiro"
                android:visibility="invisible" />

        </LinearLayout>

        <TextView
            android:id="@+id/txtViewBarbeiroSelecionado2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Barbeiro Selecionado: " />

        <ListView
            android:id="@+id/lvBarbeiros"
            android:layout_width="match_parent"
            android:layout_height="401dp">

        </ListView>

        <Button
            android:id="@+id/btnRemoverBarbeiro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:enabled="false"
            android:onClick="removerBarbeiro"
            android:text="Remover Barbeiro"
            android:visibility="invisible" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>